# Unix
alias g="git"
alias v="nvim"
alias vim="nvim"
alias gr="grep -rn"
alias wttr="curl http://wttr.in/novi_sad"

# Tools
alias cat="bat"
alias ping="prettyping"
alias du="ncdu -rr -x --exclude .git --exclude node_modules"

# Ruby on Rails
alias b="bundle"
alias be="bundle exec"
alias rs="bin/rails spec"
alias pewpew="bin/rails db:migrate db:test:prepare"
alias pewpewpew="bin/rails db:drop db:create db:migrate db:test:prepare"
alias tl="tail -n 500 log/test.log"
