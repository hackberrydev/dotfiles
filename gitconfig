[core]
  editor = kak
  excludesFile = ~/.gitignore

[user]
  name = Nebojša Stričević
  email = strika@hackberry.dev

[github]
  user = strika

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
  default = current

[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX

[alias]
  a = add
  st = status -sb
  ci = commit
  ca = commit --amend
  fix = commit -am 'fix'
  br = branch
  co = checkout
  df = diff
  dfc = diff --cached
  lg = log -p
  who = shortlog -s --
  pl = pull
  ps = push
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lbranch = log --graph --simplify-by-decoration --pretty=format:'%C(yellow)%h%C(white)%d %C(bold black)%ar %C(reset)%n' --all
  ls = ls-files
  last = describe --abbrev=0 --tags
  rpo = remote prune origin
  rso = remote show origin
  purge = !git checkout master && git pull && git remote prune origin && git branch --merged | grep -v "master" | xargs git branch -D
  report = !git for-each-ref --sort=committerdate --format='%(refname:short) * %(authorname) * %(committerdate:relative)' refs/remotes/ | column -t -s '*'.
[pull]
  ff = only
