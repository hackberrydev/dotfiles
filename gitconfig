[core]
  editor = vim

[user]
  name = Nebojša Stričević
  email = nebojsa.stricevic@gmail.com

[github]
  user = strika

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[push]
  default = current

[alias]
  a = add
  st = status -sb
  ci = commit
  ca = commit --amend
  br = branch
  co = checkout
  df = diff
  dfc = diff --cached
  lg = log -p
  who = shortlog -s --
  pl = pull
  ps = push
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  last = describe --abbrev=0 --tags
  rpo = remote prune origin
  rso = remote show origin
  purge = !git checkout master && git pull && git remote prune origin && git branch | grep -v "master" | xargs git branch -D
